---
layout: base.njk
title: Teams
---

<section>
    <div class="container mx-auto px-5">
        <h2 class="text-5xl font-black text-center py-16 lg:py-24">
            Teams
        </h2>
        <div class="flex flex-col items-center">
            <div class="flex flex-col lg:flex-row gap-16 w-full pb-16">
                <div class="flex flex-col flex-1 items-start lg:items-center w-fit mx-auto">
                    <div class="pt-4 relative mx-auto text-white">
                        <input
                            class=" bg-neutral-900 h-10 px-5 pr-16 rounded-lg text-sm focus:outline-none"
                            type="search"
                            name="search"
                            placeholder="Search">
                            <button type="submit" class="absolute right-0 top-0 mt-7 mr-4">
                                <svg
                                    class="text-white h-4 w-4 fill-techfest"
                                    id="Capa_1"
                                    x="0px"
                                    y="0px"
                                    viewBox="0 0 56.966 56.966"
                                    style="enable-background:new 0 0 56.966 56.966;"
                                    xml:space="preserve"
                                    width="512px"
                                    height="512px">
                                    <path d="M55.146,51.887L41.588,37.786c3.486-4.144,5.396-9.358,5.396-14.786c0-12.682-10.318-23-23-23s-23,10.318-23,23
                                    s10.318,23,23,23c4.761,0,9.298-1.436,13.177-4.162l13.661,14.208c0.571,0.593,1.339,0.92,2.162,0.92
                                    c0.779,0,1.518-0.297,2.079-0.837C56.255,54.982,56.293,53.08,55.146,51.887z
                                    M23.984,6c9.374,0,17,7.626,17,17s-7.626,17-17,17 s-17-7.626-17-17S14.61,6,23.984,6z"/>
                                </svg>
                            </button>
                        </div>
                    </div>
                </div>
                <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-5 pb-16">
                    {% for team in collections.teams %}
                        <div class="bg-neutral-900 rounded-xl p-5 flex flex-col team">
                            <h3 class="text-3xl font-black uppercase">{{ team.data.name }}</h3>
                            <h4 class="font-bold text-lg mt-5">Faculty Incharge</h4>
                            <h4 class="">{{ team.data.faculty }}</h4>
                            <h4 class="font-bold text-lg mt-5">Team Members</h4>
                            <div class="prose prose-sm lg:prose-base prose-invert">
                                {{ team.templateContent | safe }}
                            </div>
                            <div class="flex-1 flex items-end">
                                <a href="{{ team.data.link }}" class="bg-techfest text-black rounded-full p-2 w-full flex items-center justify-center gap-2 mt-10 hover:opacity-90 transition-all font-bold">
                                    <i class="fab fa-whatsapp"></i>
                                    <span>Join group</span>
                                </a>
                            </div>
                        </div>
                    {% endfor %}
                </div>
            </div>
        </div>
    </section>
    <script src="/js/teams.js"></script>